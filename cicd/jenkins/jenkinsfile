pipeline {
    
    agent any
stages{
   stage ("Clone Code") {
      steps {
          // clone source
          script{
            sh "git clone https://github.com/Chamssiddine/DevOps-Mentorship.git"
          }
     }
   }
   stage ("tesing the Code") {
      steps {
           script{
          sh 'echo testing '
         
      }
  }
   }
   stage ("building the Code") {
 
      steps {
           script{
            sh 'echo testing '
          // clone source
           }
         
      }
  }
    stage("deploying") {
            steps {
                   script{
                    sh 'echo testing '
          // clone source
      }
        }
      
      }
   
  }
}
           